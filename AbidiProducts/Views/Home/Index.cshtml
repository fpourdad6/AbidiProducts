@model ProductViewModel;

@{
    ViewData["Title"] = "افزودن محصول";
    var listOfProduct = ViewBag.Products as IEnumerable<Product>;
}
@Html.HiddenFor(model => model.Id)
<html dir="rtl">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>

<body dir="rtl">
    <div class="container mt-2">

        <div class="card border-0 shadow">
            <div class="card-header bg-transparent d-flex align-items-center justify-content-between">
                <h1>محصولات</h1>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#productModal">
                    افزودن محصول
                </button>
            </div>
        </div>

        <form method="post" asp-action="Index" asp-controller="Home">
            <div asp-validation-summary="All"></div>
            <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">افزودن محصول</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            @*<input  asp-for="Id" type="hidden" id="Id"/>*@
                            <div class="form-group">
                                <label class="form-label" asp-for="ProductCode">کد محصول</label>
                                <input class="form-control" type="text" asp-for="ProductCode" />
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="ProductName">نام محصول</label>
                                <input class="form-control" type="text" asp-for="ProductName" />
                            </div>

                            <div class="form-group">
                                <label class="form-label" asp-for="Qty">تعداد</label>
                                <input class="form-control" type="number" asp-for="Qty" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">واحد</label>

                                @Html.DropDownListFor(x =>Model.UnitId, new SelectList(ViewBag.subGroupNameList, "Id", "UnitName"), new {@class="form-select"})

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                            <button id="productSubmit" type="submit" class="btn btn-primary" asp-action="AddProduct" asp-controller="Home">ذخیره</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="container">
        <div class="row">
            <table id="example" class="table table-striped table-bordered sortable" style="width:100%">
                <thead>
                    <tr>
                        <th>کد کالا</th>
                        <th>نام کالا</th>
                        <th>تعداد</th>
                        <th>واحد</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in listOfProduct)
                    {
                        <tr>
                            <td>@item.ProductCode</td>
                            <td>@item.ProductName</td>
                            <td>@item.Qty</td>
                            <td>@item.Unit.UnitName</td>
                            <td>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productModal">
                                    ویرایش
                                </button>
                                <button type="button" class="btn btn-danger" asp-action="DeleteProduct" asp-controller="Home">حذف</button>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>

        </div>
    </div>
</body>
</html>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>


