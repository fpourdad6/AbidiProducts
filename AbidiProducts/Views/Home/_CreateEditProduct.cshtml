@model ProductViewModel;

@{
    ViewData["Title"] = "افزودن/ویرایش محصول";
}


<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">افزودن محصول</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form method="post" asp-action="CreateEditProduct" asp-controller="Home">
        <div class="modal-body">
            <div class="form-group">
                <input type="hidden" name="id" asp-for="Id">

                <label class="form-label" asp-for="ProductCode">کد محصول</label>
                <input class="form-control" type="text" asp-for="ProductCode" required />
            </div>
            <div class="form-group">
                    <label class="form-label" asp-for="ProductName">نام محصول</label>
                    <input class="form-control" type="text" asp-for="ProductName" required />
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Qty">تعداد</label>
                    <input class="form-control" type="number" asp-for="Qty" required />
                </div>

                <div class="form-group">
                    <label class="form-label">واحد</label>

                    @Html.DropDownListFor(x =>Model.UnitId, new SelectList(ViewBag.subGroupNameList, "Id", "UnitName"), new {@class="form-select"})

                </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
            <input type="hidden" name="id" value="Id">
            <button id="productSubmit" type="submit" class="btn btn-primary" asp-action="CreateEditProduct" asp-controller="Home">ذخیره</button>
        </div>
    </form>
</div>
